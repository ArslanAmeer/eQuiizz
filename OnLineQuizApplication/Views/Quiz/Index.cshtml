
@model IEnumerable<OnlineQuizClasses.QuizManagement.Quiz>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <h2>Slider Here</h2>
</div>
<div class="row">
    @foreach (var v in Model)
    {
        <div class="col-lg-4 col-md-6 col-sm-12 mt-4">
            <div class="card text-center" style="width:22rem;">
                <div class="card-header deep-purple white-text">
                    QuizNo: @v.Id
                </div>
                <div class="card-body">
                    <p class="title text-uppercase">@v.QuizTitle</p>
                    <div class="row">
                        <div class="col-lg-6">
                            <p class="bg-totalq"> Total Questions:<span class="badge badge-primary ml-2" style="border-radius: 50%">@v.TotalQuestion</span></p>
                            <p class="bg-totalq"> Total Takes:<span class="badge badge-default ml-4" style="border-radius: 50%">12</span></p>
                        </div>
                        <div class="col-lg-6">
                            <p class="fa fa-clock fa-2x"></p>
                            <h5>Total Time: @v.TotalTime</h5>
                        </div>
                    </div>
                    <div>
                        <a class="btn btn-deep-purple btn-block" href="@Url.Action("ConductQuiz","Quiz",new{id=v.Id})" style="border-radius: 21px">Start Quiz</a>
                    </div>
                </div>
                <div class="text-muted text-right" style="margin-right: 23px">
                    <small class="mb-0">Created Time: 2 days ago</small>
                </div>
            </div>
        </div>
    }
</div>
