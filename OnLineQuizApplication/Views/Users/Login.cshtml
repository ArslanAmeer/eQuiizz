    //Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = null;

}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/Icons/download.png" rel="icon" type="image/x-icon" />
    <!-- Font Awesome -->
    <link href="~/Content/MDB-Free/fontawesome-free-5.0.13/web-fonts-with-css/css/fontawesome-all.min.css" rel="stylesheet" />
    <!-- Bootstrap core CSS -->
    <link href="~/Content/MDB-Free/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Material Design Bootstrap -->
    <link href="~/Content/MDB-Free/css/mdb.min.css" rel="stylesheet" />
    <!-- Your custom styles (optional) -->
    <link href="~/Content/MDB-Free/css/style.css" rel="stylesheet" />
</head>
<body>
    <div class="col-lg-6 offset-3" style="margin-top: 8%">
        <!-- Default form login -->
        <form class="text-center border border-light p-5">
            <p class="h4 mb-4">Sign in</p>
            <!-- Email -->
            <div class="md-form">
                @*<i class="fa fa-user prefix"></i>*@
                <input type="email" id="defaultLoginFormEmail" class="form-control mb-4">
                <label for="defaultLoginFormEmail">Email</label>
            </div>
            <!-- Password -->
            <div class="md-form">
                @*<i class="fa fa-lock prefix"></i>*@
                <input type="password" id="defaultLoginFormPassword" class="form-control mb-4">
                <label for="defaultLoginFormPassword">Password</label>
            </div>
            <div class="d-flex justify-content-around">
                <div>
                    <!-- Remember me -->
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control-input" id="defaultLoginFormRemember">
                        <label class="custom-control-label" for="defaultLoginFormRemember">Remember me</label>
                    </div>
                </div>
                <div>
                    <!-- Forgot password -->
                    <a href="">Forgot password?</a>
                </div>
            </div>
            <!-- Sign in button -->
            <button class="btn btn-info btn-block my-4" type="submit" style="border-radius: 21px">Sign in</button>
            Create New Account ....<a href="@Url.Action("Signup","Users")">SignUp</a>
            <!-- Register -->
            @*<p>
                    Not a member?
                    <a href="">Register</a>
                </p>
                 Social login
                <p>or sign in with:</p>
                <a type="button" class="light-blue-text mx-2">
                    <i class="fa fa-facebook"></i>
                </a>
                <a type="button" class="light-blue-text mx-2">
                    <i class="fa fa-twitter"></i>
                </a>
                <a type="button" class="light-blue-text mx-2">
                    <i class="fa fa-linkedin"></i>
                </a>
                <a type="button" class="light-blue-text mx-2">
                    <i class="fa fa-github"></i>
                </a>*@
        </form>
        <!-- Default form login -->
    </div>
    <!-- JQuery -->
    <script src="~/Content/MDB-Free/js/jquery-3.3.1.min.js"></script>
    <!-- Bootstrap tooltips -->
    <script src="~/Content/MDB-Free/js/popper.min.js"></script>
    <!-- Bootstrap core JavaScript -->
    <script src="~/Content/MDB-Free/js/bootstrap.min.js"></script>
    <!-- MDB core JavaScript -->
    <script src="~/Content/MDB-Free/js/mdb.min.js"></script>
</body>
</html>
